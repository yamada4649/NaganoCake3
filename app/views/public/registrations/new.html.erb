<h2>Sign up</h2>
<div class="col-xs-6 col-xs-offset-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

   <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "姓" %>
          </div>
          <div class="col-xs-6">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "名" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control", placeholder: "セイ" %>
          </div>
          <div class="col-xs-6">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control", placeholder: "メイ" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control", placeholder: "郵便番号(ハイフン不要)" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-12">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", placeholder: "住所" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <%= f.text_field :phone, autofocus: true, autocomplete: "phone_number", class: "form-control", placeholder: "電話番号(ハイフン不要)" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メードアドレス" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(6文字以上)" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "再確認用" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
          <%= f.submit "新規登録", class: "btn btn-block btn-info" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render "public/shared/links" %>

</div>
