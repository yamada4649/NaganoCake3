<div class="container">
<div class="row">
     <h3><strong>商品一覧（全件）</strong></h3>

     <% @items.each do |items| %>

     <div style=" display: inline-block;">

           <div id="img_wrap">
            <%= link_to item_path(items) do %>
            <%= attachment_image_tag items,:product_image, :fill,150,150, format:"jpg", fallback: "image1.jpg"%>
             <% end %>
           </div>
             
           
           	<div>
           	<strong><%= items.name %></strong>
           </div>
           <div style="color: red">
  
            <%= items.notax_price%>円
           	</div>

     </div>
            <% end %>

</div>
</div>