<div class="container">
	<div class="row">
		<div class="top-message col-md-offset-1 col-md-6">
      <%= flash[:notice] %>
			<table class="table table-condensed">
         <thead>
                <tr>
                <th><strong>マイページ</strong></th>
                 </tr>
                 <tr>
                 	<th>登録情報</th>
                    <th>
                 	 <div class="col-xs-12">
                 	 	<%= link_to '編集する', edit_end_user_path,class: "btn btn-primary col-xs-12" %>
                     </div>

                    </th>
                    <th>
                     <div class="col-xs-12">
                 	 	<%= link_to 'パスワードを変更する', edit_end_user_password_path,class: "btn btn-primary col-xs-12" %>

                     </div>
                    </th>
                </tr>
               </thead>
               <tbody>
               	<tr>
               		<td class="title">
               			氏名
               		</td>
               		<td>
               			<%= @end_user.first_name %>
               			<%= @end_user.last_name %>

               		</td>
               	 </tr>
               	 <tr>
               	 	<td class="title">
               	 		<strong>カナ</strong>
               	 	</td>
               		<td>
               		    <%= @end_user.first_name_kana %>
               			<%= @end_user.last_name_kana %>

               		</td>
               	</tr>
               	<tr>
               		<td class="title">郵便番号</td>
               		<td><%= @end_user.postal_code %></td>
               	</tr>
               	<tr>
               		<td class="title">
               			住所
               		</td>
               		<td><%= @end_user.address %></td>
               	</tr>
               	<tr>
               		<td class="title">電話番号</td>
               		<td><%= @end_user.phone %></td>
               	</tr>
               	<tr>
               		<td class="title">メールアドレス</td>
               		<td><%= @end_user.email %></td>
               	</tr>
               	<tr>
               		<td class="title"><h3>配送先</h3></td>
               		<td> <%= link_to '一覧を見る',addresses_path, class: "btn btn-primary col-xs-12" %>
               		</td>
               	</tr>
               	<tr>
               		<td class="title">
                      <h3>注文履歴</h3>
               		</td>
               		<td>
               			<%= link_to '一覧を見る', class: "btn btn-primary col-xs-12" %>
               		</td>
               	</tr>
               </tbody>
            </table>
		</div>
	</div>
</div>