<div class="col-xs-4 col-xs-offset-4">

<h2><strong>Log inの方をお願い致します。</strong></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true,  class: "form-control",autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, class: "form-control input-sm",autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions" style="margin-bottom: 40px;">
    <%= f.submit "Log in", class: "btn btn-warning col-xs-12" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>