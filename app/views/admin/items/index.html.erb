<div class="container">
	<div class="row">
	  <div class="top-message col-md-offset-1 col-md-10">
      <h3><strong>商品一覧</strong></h3>
	   <table class="table table-hover">
       <thead>
      <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
       <th>
        <%= link_to new_admin_item_path do %>
        <button type="button" class="col-xs-12 btn btn-primary glyphicon glyphicon-edit"></button>

        <% end %>
      </th>
       </tr>
      </thead>
      <tbody>
        <% @items.each do |items| %>

        <tr>
          <td>
            <%= items.id %>
          </td>
          <td>
          	<%= items.name %>

          </td>
          <td style="color: red">
            <%= items.notax_price %>円

          </td>
          <td>
          	<%= items.genre.name %>
          </td>
          <td><% if items.sale_status %>
          	販売中
          	<% else %>
          	販売停止中
          	<% end %>
          </td>
          <td>
            <%= link_to '削除', admin_item_path(items),class: "col-xs-12 btn btn-danger glyphicon glyphicon-edit",method: :delete,"data-confirm" =>"本当に空にしてもよろしいでしょうか?" %>
           </td>
        </tr>
        <% end %>
      </tbody>
     </table>
		</div>
	</div>
</div>