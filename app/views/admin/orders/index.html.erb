<div class="container">
  <div class="row">
    <div class="top-message col-md-offset-3 col-md-6">
      <h2>注文履歴一覧</h2>
      <table class= "table table-hover table-inverse">
       <thead>
      <tr>
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th>注文ステータス</th>
       </tr>
      </thead>
      <tbody>
      	   <% @orders.each do |orders| %>

      	<tr>
      		<td>
      			<%= link_to admin_order_path(orders.id) do %>
            <%= orders.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分%-S秒") %><!-- 登録日時については、1にgemに_i18nを追加し、application.rbに記載し、2asiaを追加する -->
                <% end %>
      		</td>
      		<td>
      			<%= orders.end_user.first_name +  orders.end_user.last_name %>
      		</td>
      		<td>
            <%= orders.orders_details.sum(:amount) %>個
      		</td>
      		<td>
      			<%= orders.order_status_i18n %>
      		</td>
      	</tr>
      	<% end %>
      </tbody>
    </div>
  </div>
</div>