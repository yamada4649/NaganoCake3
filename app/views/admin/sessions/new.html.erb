<div class="container">
 <div class="row">
   <div class="top-message col-md-offset-3 col-md-6">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <table class="table">
    <thead>
        <tr>
            <th><h3>管理者ログイン</h3></th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
              <div class="col-xs-6">

               <%= f.label :メールアドレス %>
              </div>
              <div class="col-xs-6">
               <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

              </div>
            </td>
        </tr>
        <tr>
          <td colspan="3"></td>
        </tr>
        <tr>
            <td>
             <div class="col-xs-6">

              <%= f.label :パスワード %>
            </div>
            <div class="col-xs-6">

              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            </td>
         </tr>
         <tr>
          <td>
            <div class="col-xs-4 col-xs-offset-4">
           <%= f.submit "ログイン", class: "btn btn-block btn-info" %>
            </div>
          </td>
         </tr>
<% end %>
</tbody>
</table>
<%= render "admin/shared/links" %>

</div>
</div>
</div>